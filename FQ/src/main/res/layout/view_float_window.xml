<?xml version="1.0" encoding="utf-8"?>
<com.faqun.OverLayLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_dp200"
    android:background="#000000"
    >

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:drawablePadding="@dimen/margin_dp10"
        android:text="返回"
        android:padding="@dimen/margin_dp10"
        />

    <TextView
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:drawablePadding="@dimen/margin_dp10"
        android:text="停止"
        android:padding="@dimen/margin_dp10"
        />

    <TextView
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:drawablePadding="@dimen/margin_dp10"
        android:text="开始"
        android:padding="@dimen/margin_dp10"
        />


