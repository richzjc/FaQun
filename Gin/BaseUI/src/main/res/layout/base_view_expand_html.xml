<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wallstreetcn.baseui.widget.CustomTextView
        android:id="@+id/contentTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/day_mode_text_dark_color" />

    <com.wallstreetcn.baseui.widget.CustomTextView
        android:id="@+id/expand_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contentTv"
        android:text="@string/base_open_all_text"
        android:textColor="#0A8CFF"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>