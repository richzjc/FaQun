<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/day_mode_background_color1_ffffff"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.wallstreetcn.baseui.widget.CustomTextView
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_dp70"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/day_mode_text_color1_333333"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"/>

    <com.wallstreetcn.baseui.widget.CustomTextView
        android:id="@+id/desc2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_dp10"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/day_mode_time_author"
        android:textSize="@dimen/text_size_16"/>

    <com.wallstreetcn.imageloader.WscnImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        android:layout_width="@dimen/margin_dp125"
        android:layout_height="@dimen/margin_dp125"
        android:layout_marginTop="@dimen/margin_dp20"
        app:actualImageScaleType="fitCenter"/>

    <com.wallstreetcn.baseui.widget.CustomTextView
        android:id="@+id/emptyDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_dp20"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/day_mode_time_author"
        android:textSize="@dimen/text_size_16"/>

</LinearLayout>

